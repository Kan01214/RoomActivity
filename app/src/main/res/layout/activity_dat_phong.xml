<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="Fragment_Room">



<TextView
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Thông Tin Khách Hàng"
        android:textSize="20dp" />

    <EditText
        android:hint="Họ Tên"
        android:id="@+id/edithoten"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent" />

    <EditText
        android:hint="Điện Thoại"
        android:id="@+id/editdienthoai"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent" />

    <EditText
        android:hint="Email"
        android:id="@+id/editemail"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent" />

    <EditText
        android:hint="CMND"
        android:id="@+id/editcmnd"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent" />

    <EditText
        android:hint="Địa Chỉ"
        android:id="@+id/editdiachi"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent" />


    <TextView
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Thông Tin Phòng"
        android:textSize="20dp" />

    <TextView
        android:hint="Room"
        android:textSize="20dp"
        android:id="@+id/editroom"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent" />

    <Spinner
        android:id="@+id/spinnerroom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/editngayden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Ngày Đến" />

    <Spinner
        android:id="@+id/spinnersoroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/editngaydi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Ngày Đi" />

    <TextView
        android:id="@+id/editadult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Adult" />

    <Spinner
        android:id="@+id/spinnersonguoilon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/editchild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="Child" />


    <Spinner
        android:id="@+id/spinnersotreem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#edffac06"
        android:drawablePadding="10sp"
        android:hint="Reset" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#edffac06"
        android:drawablePadding="10sp"
        android:hint="Send" />






</LinearLayout>